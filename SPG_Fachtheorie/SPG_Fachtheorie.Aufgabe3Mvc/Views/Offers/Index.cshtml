@model IEnumerable<SPG_Fachtheorie.Aufgabe2.Model.Offer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Offers</h1>
<table class="table table-sm">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(x => x.Subject.Term)</th>
            <th>@Html.DisplayNameFor(x => x.Subject.Name)</th>
            <th>@Html.DisplayNameFor(x => x.Subject.EducationType)</th>
            <th>@Html.DisplayNameFor(x => x.From)</th>
            <th>@Html.DisplayNameFor(x => x.To)</th>
            <th>@Html.DisplayNameFor(x => x.Appointments.Count)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@Html.DisplayFor(o => x.Subject.Term)</td>
                <td>@Html.DisplayFor(o => x.Subject.Name)</td>
                <td>@Html.DisplayFor(o => x.Subject.EducationType)</td>
                <td>@Html.DisplayFor(o => x.From)</td>
                <td>@Html.DisplayFor(o => x.To)</td>
                <td>@Html.DisplayFor(o => x.Appointments.Count)</td>
                <td>
                <a asp-action="Edit" asp-route-id="@x.Id">Edit</a>
                <a asp-action="Details" asp-route-id="@x.Id">Details</a>
                <a asp-action="Delete" asp-route-id="@x.Id">Delete</a>
                </td>
            </tr>
            
        }
    </tbody>
</table>
<p> <a asp-action="Create">Create New</a></p>
